<%= simple_form_for(@product) do |f| %>
  <div class="box box-danger">
    <div class="box-header with-border">
      <h3 class="box-title">
        Dados do <%=t Product.model_name.human %>
      </h3>
    </div>
    <div class="box-body">
      <%= f.association :product_category %>
      <%= f.input :name %>
      <%= f.input :quantity_stock %>
      <%= f.input :amount %>
      
    </div>
    <div class="box-footer">
      <%= link_to t('.cancel', default: t("helpers.links.cancel")), products_path, class: 'btn btn-default'  %>
      <%= f.submit  t('.save', default: t("helpers.links.save")), class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
