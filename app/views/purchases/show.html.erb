<div class="box box-danger">
  <div class="box-header with-border">
    <h3 class="box-title">
      <%=t Purchase.model_name.human %>
    </h3>
  </div>
  <div class="box-body">
    <div class="fieldset">
      <dl>
        <dt><%= Purchase.human_attribute_name(:product) %></dt>
        <dd><pre class="prettyprint"><%= @purchase.product.name if @purchase.product %>&nbsp;</pre></dd>
        <dt><%= Purchase.human_attribute_name(:invoice_cnpj) %></dt>
        <dd><pre class="prettyprint"><%= @purchase.invoice_cnpj %>&nbsp;</pre></dd>
        <dt><%= Purchase.human_attribute_name(:invoice_number) %></dt>
        <dd><pre class="prettyprint"><%= @purchase.invoice_number %>&nbsp;</pre></dd>
        <dt><%= Purchase.human_attribute_name(:date_purchase) %></dt>
        <dd><pre class="prettyprint"><%= @purchase.date_purchase %>&nbsp;</pre></dd>
        <dt><%= Purchase.human_attribute_name(:quantity) %></dt>
        <dd><pre class="prettyprint"><%= @purchase.quantity %>&nbsp;</pre></dd>        
        <dt><%= Purchase.human_attribute_name(:unitary_value) %></dt>
        <dd><pre class="prettyprint"><%= @purchase.unitary_value %>&nbsp;</pre></dd>
        <dt><%= Purchase.human_attribute_name(:amount) %></dt>
        <dd><pre class="prettyprint"><%= @purchase.amount %>&nbsp;</pre></dd>
        
      </dl>
    </div>
  </div>
  <div class="box-footer">
    <%= link_to t('.back', default: t("helpers.links.back")),
                purchases_path, class: 'btn btn-default'  %>
    <%= link_to t('.edit', default: t("helpers.links.edit")),
                edit_purchase_path(@purchase), class: 'btn btn-default' %>
    <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                purchase_path(@purchase),
                method: 'delete',
                data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                class: 'btn btn-danger' %>
  </div>
</div>
