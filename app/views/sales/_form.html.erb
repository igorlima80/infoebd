<%= simple_form_for(@sale) do |f| %>
  <div class="box box-danger">
    <div class="box-header with-border">
      <h3 class="box-title">
        Dados do <%=t Sale.model_name.human %>
      </h3>
    </div>
    <div class="box-body">
      <%= f.association :product, html5: true, wrapper_html: { class: 'col-md-6' }  %>
      <%= f.input :date_sale, as: :date,  start_year: Date.today.year - 10,
                              end_year: Date.today.year,
                              order: [:day, :month, :year], 
                              html5: true,  
                              wrapper_html: { class: 'col-md-2' }  %>
      <%= f.input :cpf, html5: true, wrapper_html: { class: 'col-md-4' }  %>
      <%= f.input :total_quantity, html5: true, wrapper_html: { class: 'col-md-4' } %>
      <%= f.input :unitary_value, html5: true, wrapper_html: { class: 'col-md-4' }  %>
     
      <%= f.input :amount, html5: true, wrapper_html: { class: 'col-md-4' }  %>
     
      
    </div>
    <div class="box-footer">
      <%= link_to t('.cancel', default: t("helpers.links.cancel")), sales_path, class: 'btn btn-default'  %>
      <%= f.submit  t('.save', default: t("helpers.links.save")), class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
