<div class="box box-danger">
  <div class="box-header with-border">
    <h3 class="box-title">
      <%=t ProductCategory.model_name.human %>
    </h3>
  </div>
  <div class="box-body">
    <div class="fieldset">
      <dl>
        <dt><%= ProductCategory.human_attribute_name(:name) %></dt>
        <dd><pre class="prettyprint"><%= @product_category.name %>&nbsp;</pre></dd>
      </dl>
    </div>
  </div>
  <div class="box-footer">
    <%= link_to t('.back', default: t("helpers.links.back")),
                product_categories_path, class: 'btn btn-default'  %>
    <%= link_to t('.edit', default: t("helpers.links.edit")),
                edit_product_category_path(@product_category), class: 'btn btn-default' %>
    <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                product_category_path(@product_category),
                method: 'delete',
                data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                class: 'btn btn-danger' %>
  </div>
</div>
