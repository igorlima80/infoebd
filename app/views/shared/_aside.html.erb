<!-- Left side column. contains the sidebar -->
<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu" data-widget="tree">
      <li class="header">MENU PRINCIPAL</li>
      <% @menu_itens.each_with_index do |item, i| %>
        <li <%= "class=active" if item == controller_name %>>
          <%= link_to eval("#{item}_path") do %>
            <i class="fa fa-circle-o text-<%= @colors[i % 3] %>"></i>
            <span><%= Kernel.const_get(item.singularize.camelize).model_name.human.pluralize %></span>
          <% end %>
        </li>
      <% end %>
     
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>
