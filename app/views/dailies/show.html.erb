


<div class="box box-danger">
  <div class="box-header with-border">
    <h3 class="box-title">
      <%=t Daily.model_name.human %>
    </h3>
  </div>
  <div class="box-body">
    <div class="fieldset">
      <dl>
        <dt><%= Daily.human_attribute_name(:date_daily) %></dt>
        <dd><pre class="prettyprint"><%= @daily.date_daily %>&nbsp;</pre></dd>
        <dt><%= Daily.human_attribute_name(:school_class) %></dt>
        <dd><pre class="prettyprint"><%= @daily.school_class.description if @daily.school_class %>&nbsp;</pre></dd>
      </dl>
    </div>
  </div>

  
  <div class="box-footer">
    <%= link_to t('.back', default: t("helpers.links.back")),
                dailies_path, class: 'btn btn-default'  %>
    <%= link_to t('.edit', default: t("helpers.links.edit")),
                edit_daily_path(@daily), class: 'btn btn-default' %>
    <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                daily_path(@daily),
                method: 'delete',
                data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                class: 'btn btn-danger' %>
  </div>




  <div class="box box-danger">
    <div class="box-header with-border">
        <h3 class="box-title">
          <%=t Student.model_name.human.pluralize %>
        </h3>
    </div>              

  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Aluno</th>
        <th>Tipo de Estudante</th>
        <th>Presente</th>   
        
      </tr>
    </thead>
    <tbody>
      <% @daily.school_attendances.each do |attendance| %>
        <tr>
          <td>
         
            <%=  link_to attendance.student.id,  student_path(attendance.student) %>
          </td>
          <td>
            <%= attendance.student.name %>
          </td>
          <td>
            <%= attendance.student.type_student.name %>
          </td>
          <td>
            <% if attendance.presence == true %>
              Presente
            <% else %>
              Faltou
            <% end %> 
          </td>
                    
        </tr>
      <% end %>
    </tbody>
  </table>





</div>
