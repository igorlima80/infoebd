<div class="box box-danger">
  <div class="box-header with-border">
    <h3 class="box-title">
      <%=t Teacher.model_name.human %>
    </h3>
  </div>
  <div class="box-body">
    <div class="fieldset">
      <dl>
        <dt><%= Teacher.human_attribute_name(:name) %></dt>
        <dd><pre class="prettyprint"><%= @teacher.name %>&nbsp;</pre></dd>
        <dt><%= Teacher.human_attribute_name(:cpf) %></dt>
        <dd><pre class="prettyprint"><%= @teacher.cpf %>&nbsp;</pre></dd>
        <dt><%= Teacher.human_attribute_name(:birth) %></dt>
        <dd><pre class="prettyprint"><%= @teacher.birth %>&nbsp;</pre></dd>
        <dt><%= Teacher.human_attribute_name(:address) %></dt>
        <dd><pre class="prettyprint"><%= @teacher.address %>&nbsp;</pre></dd>
        <dt><%= Teacher.human_attribute_name(:email) %></dt>
        <dd><pre class="prettyprint"><%= @teacher.email %>&nbsp;</pre></dd>
        <dt><%= Teacher.human_attribute_name(:phone) %></dt>
        <dd><pre class="prettyprint"><%= @teacher.phone %>&nbsp;</pre></dd>
      </dl>
    </div>
  </div>
  <div class="box-footer">
    <%= link_to t('.back', default: t("helpers.links.back")),
                teachers_path, class: 'btn btn-default'  %>
    <%= link_to t('.edit', default: t("helpers.links.edit")),
                edit_teacher_path(@teacher), class: 'btn btn-default' %>
    <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                teacher_path(@teacher),
                method: 'delete',
                data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                class: 'btn btn-danger' %>
  </div>
</div>
