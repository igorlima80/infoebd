<div class="box box-danger">
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <%- attributes.each do |attribute| -%>
        <th><%%= <%= singular_name.classify %>.human_attribute_name(:<%= attribute.name %>) %></th>
        <%- end -%>
        <th class='text-center'><%%=t '.actions', default: t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <%% @<%= plural_name %>.each do |<%= singular_name %>| %>
        <tr>
          <td>
            <%%= link_to <%= singular_name %>.id, <%= singular_name %>, class: 'number bg-black' %>
          </td>
          <%- attributes.each do |attribute| -%>
          <td>
            <%%= <%= singular_name %>.<%= attribute.reference? ? "#{attribute.name}.name if #{singular_name}.#{attribute.name}" : attribute.name %> %>
          </td>
          <%- end -%>
          <td style='white-space: nowrap' class='text-center'>
            <%%= render 'shared/action_links', object: <%= singular_name %> %>
          </td>
        </tr>
      <%% end %>
    </tbody>
  </table>
</div>
