<div class="box box-danger">
  <div class="box-header with-border">
    <h3 class="box-title">
      <%%=t <%= singular_name.camelize %>.model_name.human %>
    </h3>
  </div>
  <div class="box-body">
    <div class="fieldset">
      <dl>
        <%- attributes.each do |attribute| -%>
        <dt><%%= <%= singular_name.classify %>.human_attribute_name(:<%= attribute.name %>) %></dt>
        <dd><pre class="prettyprint"><%%= @<%= singular_name %>.<%= attribute.reference? ? "#{attribute.name}.name if @#{singular_name}.#{attribute.name}" : attribute.name %> %>&nbsp;</pre></dd>
        <%- end -%>
      </dl>
    </div>
  </div>
  <div class="box-footer">
    <%%= link_to t('.back', default: t("helpers.links.back")),
                <%= plural_name %>_path, class: 'btn btn-default'  %>
    <%%= link_to t('.edit', default: t("helpers.links.edit")),
                edit_<%= singular_name %>_path(@<%= singular_name %>), class: 'btn btn-default' %>
    <%%= link_to t('.destroy', default: t("helpers.links.destroy")),
                <%= singular_name %>_path(@<%= singular_name %>),
                method: 'delete',
                data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                class: 'btn btn-danger' %>
  </div>
</div>
